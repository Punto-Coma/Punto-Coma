---
import Card from './Card.astro'
import { frontmatter } from '../docs/Card.md'
const { hero, items } = frontmatter
---

<section class="container mx-auto w-11/12 max-w-screen-lg py-20">
  <h2 class="mb-12 text-center text-3xl font-bold leading-5 text-white">
    {hero}
  </h2>

  <div class="flex flex-wrap justify-center gap-8">
    {items.map((d: { title: string; text: string }) => <Card {...d} />)}
  </div>
</section>
